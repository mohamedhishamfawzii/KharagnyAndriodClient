<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/login"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_above="@+id/emailText"
                android:layout_alignEnd="@+id/button"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/button"
                android:layout_marginBottom="30sp"
                android:layout_weight="0.12"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="0.12"
                android:backgroundTint="#b5bcc0"
                android:ems="10"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:shadowColor="#b5bcc0"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#b5bcc0"
                android:textColorHint="#b5bcc0" />

            <EditText
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="#b5bcc0"
                android:ems="10"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:shadowColor="#b5bcc0"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#b5bcc0"
                android:textColorHint="#b5bcc0" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="0.12"
                android:backgroundTint="#b5bcc0"
                android:ems="10"
                android:hint="Re-type password"
                android:inputType="textEmailAddress"
                android:shadowColor="#b5bcc0"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#b5bcc0"
                android:textColorHint="#b5bcc0" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="#b5bcc0"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPassword"
                android:textColor="@android:color/background_light"
                android:textColorHint="#b5bcc0"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="5dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editText3"
                android:layout_alignStart="@+id/emailText"
                android:layout_centerVertical="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/rounded"
                android:onClick="loginFunc"
                android:text="Sign up "
                android:textColor="#b5bcc0" />

        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>